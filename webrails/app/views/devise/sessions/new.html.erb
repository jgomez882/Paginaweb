          <p class="letra-iniciar-sesion" style="padding-top: 25px;padding-bottom: 10px;">Inicia sesion</p>
        </div>
        

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <!--<%= f.label :email %> -->
           <!-- <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %> -->
           <%= f.email_field :email, autofocus: true, placeholder: "email:* ", class:"form-control  class-textfield-email"%>
